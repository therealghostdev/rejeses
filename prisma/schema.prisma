generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id                 Int           @id @default(autoincrement())
  firstName          String
  lastName           String
  courseType         String
  courseScheduleType ClassSchedule
  courseSchedule     DateTime[]
  startDate          String
  email              String
  amount             Int
  status             OrderStatus
  transaction        Transaction?  @relation("transaction")
  promocode          PromoCode?    @relation("promocode")
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
}

model Transaction {
  id         Int         @id @default(autoincrement())
  txid       String      @unique
  orderRef   Int?        @unique
  orderID    Order?      @relation(fields: [orderRef], references: [id], name: "transaction")
  pid        String
  reference  String      @unique
  status     OrderStatus
  accessCode String
  currency   Currency
  fee        Int
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model PromoCode {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  orderRef  Int?     @unique
  order     Order?   @relation(fields: [orderRef], references: [id], name: "promocode")
  expiresAt DateTime
  createdAt DateTime @default(now())
}

enum OrderStatus {
  pending
  completed
  failed
  canceled
}

enum Currency {
  naira
  dollar
}

enum ClassSchedule {
  weekend
  weekday
}
